<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DMC"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DMC">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.HomeActivity"/>
        <activity
            android:name=".activity.AddMedicalRecordActivity"
            android:exported="false"
            android:label="Tambah Rekam Medis"
            android:theme="@style/Theme.DMC" />

        <activity
            android:name=".activity.MedicineInfoActivity"
            android:exported="false"
            android:label="Informasi Obat"
            android:theme="@style/Theme.DMC" />

        <activity
            android:name=".activity.DispenseMedicineActivity"
            android:exported="false"
            android:label="Jejak Rekam Medis"
            android:theme="@style/Theme.DMC" />
        <activity
            android:name=".activity.MedicalRecordsListActivity"
            android:exported="false"
            android:label="Jejak Rekam Medis"
            android:theme="@style/Theme.DMC" />

    </application>

</manifest>